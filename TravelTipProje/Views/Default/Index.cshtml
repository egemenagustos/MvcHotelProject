@using TravelTipProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML>
<html>
<body> 
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Foto Galeri</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurantlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div style="width:650px; height:350px" class="slider">
                            <ul class="rslides" id="slider1">
                                @foreach (var item in Model)
                                {
                                <li><img style="width:650px;height:350px" src="@item.BlogImage" alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyehat Bloguma Hoş Geldiniz !</h3>
                    <p>
                        2019 yılında sektörde ciddi bir marka olmayı hedefleyen, Tursab’a kayıtlı 12372 işletme numarası ile kurulmuş A grubu bir Turizm Seyahat Acentası olan Es Karnaval Turizm iştirakıdır.
                        www.odarezervasyonu.com ; vizyonu, gelişen dünyaya ayak uydurmaktan daha çok, onunla birlikte gelişmek ve misafirlerini de bu gelişime dâhil edebilmektir.Misyonumuz  “misafirlerimize, 
                        farklılık gözetmeksizin hizmette uygun fiyata yüksek kalitede hizmet imkânı sunmak ve misafirlerimizi “Yeni Nesil Tatil” anlayışı adı altında buluşturmaktır.
                        2019 yılında sektörde ciddi bir marka olmayı hedefleyen, Tursab’a kayıtlı 12372
                        işletme numarası ile kurulmuş A grubu bir Turizm Seyahat Acentası olan Es Karnaval Turizm iştirakıdır.
                    </p>
                </div>
                @Html.Action("Partial1","Default")
                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial3","Default")
                        @Html.Action("Partial4","Default")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


