@using TravelTipProje.Models.Siniflar
@model List<Blog>
@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Baslik</h4>
            <span class="doller">@(((DateTime)@item.Tarih).ToString("dd-MMM-yyyy")) </span>
            <p>@item.Aciklama.Substring(0, item.Aciklama.Substring(0, 100).LastIndexOf(" "))...</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}
